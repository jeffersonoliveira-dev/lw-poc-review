{
  "name": "lw-poc-review",
  "displayName": "Lw poc review",
  "version": "0.0.1",
  "description": "Browser Extension for Reviewing products online ",
  "author": "Jefferson Oliveira",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "debug:firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "build": "plasmo build",
    "test": "plasmo test",
    "start": "web-ext run --source-dir ./build/chrome-mv3-dev -t chromium --start-url chrome://newtab",
    "start:firefox": "web-ext run --source-dir ./build/firefox-mv2-dev"
  },
  "dependencies": {
    "@types/webextension-polyfill": "^0.10.7",
    "plasmo": "0.84.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "web-ext": "^7.9.0",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.10.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
